{
  "manifest_version": 3,
  "name": "Youtube Helper",
  "version": "0.0.1",
  "description": "",
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Youtube Helper Extension",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "modify_origin",
      "enabled": true,
      "path": "modify-origin-rules.json"
    }]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}
